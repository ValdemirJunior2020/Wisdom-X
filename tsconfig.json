{
  "compilerOptions": {
    "jsx": "react-jsx", // Enables React JSX support
    "lib": ["dom", "dom.iterable", "esnext"], // Includes DOM library
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  }
}
